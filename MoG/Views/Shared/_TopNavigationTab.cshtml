@model MoG.Domain.Models.VMProject

<div class="row">
    <div class="col-lg-8">
        <h1 class="page-header">
            @Html.DisplayFor(model => model.Project.Name) <small>
                @Resource.PROJECT_By
                @Html.DisplayFor(model => model.Project.Creator.DisplayName)
            </small>
            <a class="btn btn-default" href="#" data-bind="click:btnUnFollowClicked, visible: isFollowed" style="display:none">
                <span class="glyphicon glyphicon-eye-close"></span>&nbsp;Unfollow
            </a>
            <a class="btn btn-default" href="#" data-bind="click:btnFollowClicked, visible: (!isFollowed())" style="display:none">
                <span class="glyphicon glyphicon-eye-open"></span>&nbsp;Follow
            </a>
        </h1>

    </div>
    <div class="col-lg-4  hidden-xs MOG_UpperRightButton" >

        <a href="@Url.Action("Create","File",new {id = Model.Project.Id} )" class="btn btn-primary btn-lg btn-block btn-success">@Resource.PROJECT_UploadFile</a>

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs">
            @Html.MenuItem(Resource.PROJECT_General, "Detail", "Project", null, new { id=Model.Project.Id})
            @*@Html.MenuItem(Resource.PROJECT_Activity, "Activity", "Project", null, new { id = Model.Project.Id })*@
            @Html.MenuItem(Resource.PROJECT_Files, "Files", "Project", null, new { id = Model.Project.Id })
            @if (Model.HasEdit)
            {
                @Html.MenuItem(Resource.PROJECT_Administration, "Administration", "Project", null, new { id = Model.Project.Id })
            }
        </ul>
    </div>
</div>


