@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MOG</title>
    <link rel="icon" href="@Url.Content("~/Content/Images/Favicon.ico")" />
    <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    @Styles.Render("~/Style/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Fonts from Google Fonts -->
    @*<link href='http://fonts.googleapis.com/css?family=Lato:300,400,900' rel='stylesheet' type='text/css'>*@

    <link href="~/Content/css/custom-styles.css" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <link href="~/Content/css/style-ie.css" rel="stylesheet" />
    <![endif]-->

</head>
<body class="home">
    <!-- Color Bars (above header)-->
    <div class="color-bar-1"></div>
    <div class="color-bar-2 color-bg"></div>

    <div class="container">


        <div class="row header">
            <!-- Begin Header -->
            <!-- Logo
            ================================================== -->
            <div class="col-md-5 logo">
                <a href="/"><img src="@Url.Content("~/Content/img/flabbit-logo.png")" alt="" /></a>
                <h5 class="hidden-xs">Is it a flamby?<br />Is it a rabbit?</h5>

            </div>

            <!-- Main Navigation
            ================================================== -->

            <div class="col-md-7 navigation">




                <div class="navbar  navbar-default navbar-collapse">

                    <ul class="nav navbar-nav"></ul>

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </div> <!-- end header-->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissable page-header">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><strong>Error!</strong></h4>@ViewBag.ErrorMessage
            </div>
        }
        <div class="container">

            <hgroup>
                <h1>Error.</h1>
                <h2>An error occurred while processing your request.</h2>
            </hgroup>
            <h2><a href="#" id="toggleError">Click here if you are one freeky geek...</a></h2>
            <div id="exceptionDetail" style="display:none">
                @if (Model != null)
                {
                    <p>
                        <div>Controller: @Model.ControllerName <br></div>
                        <div>Action: @Model.ActionName</div>
                        <div>Exception: @Model.Exception</div>
                    </p>
                }
                
            </div>
            <footer>
                <div class="container">
                    <hr>

                    <p class="centered">&copy; @DateTime.Now.Year - Flabbit</p>
                </div><!-- /container -->
            </footer>

        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

        @Scripts.Render("~/bundles/mog")





        <script>
            $(function () {
                var visible = false;
                $('#toggleError').on('click', function () {
                    if (!visible) {
                        $('#exceptionDetail').css('display', 'block');
                    }
                    else {
                        $('#exceptionDetail').css('display', 'none');
                    }
                    visible = !visible;
                });


            });
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-45396411-2', 'azurewebsites.net');
            ga('send', 'pageview');

        </script>
</body>
</html>
