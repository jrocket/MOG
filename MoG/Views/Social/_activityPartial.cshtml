@model List<MoG.Domain.Models.VMActivity>
<h2 class="page-header">
    @Resource.PROFILE_ActivityFeed
</h2>

@foreach (var activity in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-2">
                    <img class="img-thumbnail" src="@activity.Who.PictureUrl" />
                </div>
                <div class="col-lg-10">
                    <p>
                        @Html.Raw(activity.Description)
                    </p>
                    <small>
                        <span class="js_date">@activity.When.ToString("yyyyMMdd")</span> -
                        <a href="@activity.Url">@Resource.PROFILE_SeeDetail</a>
                    </small>
                  
                </div>
            </div>


        </div>
        <hr/>
    </div>

}




</div>
<script>
    $(".js_date").each(function () {
        var date = $(this).html();
        var timespan = moment(date, "YYYYMMDD").fromNow();
        $(this).html(timespan);
    });
</script>
