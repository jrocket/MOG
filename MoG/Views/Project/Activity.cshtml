@section scripts
{
   
    <script type="text/javascript">
        var timeline_config = {
            width:              '100%',
            height:             '600',
            source:             '@Url.Action("GetActivities", "Project", new { id = @Model.Project.Id })',
            embed_id:           'timeline-embed',               //OPTIONAL USE A DIFFERENT DIV ID FOR EMBED
