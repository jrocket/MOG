@model MoG.Domain.Models.Project
@{
    ViewBag.Title = "Create";
}

<div class="container">

    @*<div class="row">

        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">@Resource.PROJECT_NewProject</li>
            </ol>
        </div>

    </div>*@
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Resource.COMMON_CreateNewProject</h1>
        </div>
    </div><!-- /.row -->
    <div class="row">

        <div class="col-sm-8">
            <h4>@Resource.PROJECT_Create_Title</h4>
            <p>@Resource.COMMON_LoremIpsum</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.VisibilityType, new { @class = "control-label" })
                    @Html.EnumDropDownListFor(model => model.VisibilityType, "Select visibility",new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VisibilityType)
                </div>
                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.LicenceType, new { @class = "control-label" })
                    @Html.EnumDropDownListFor(model => model.LicenceType, "Select a license", new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LicenceType)
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Description, 6, 80, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Tags, new { @class = "control-label" })
                    <input type="text" class="tm-input" /><br/>
                    <small>Type some tags in the input field, and separate them with enter, comma, or tab</small>
                    @Html.HiddenFor(model => model.Tags)
                    @*@Html.TextBoxFor(model => model.Tags, new { @class = "form-control", @data_role = "tagsinput" })*@
                    @*<input type="text" value="Rock,Punk,Detroit,Sydney#,Oslo" data-role="tagsinput" class="form-control" />*@
                </div>
                <div class="form-group col-lg-12">
                    <input type="hidden" name="save" value="contact">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            }
        </div>

        <div class="col-sm-4">
            <h3>@Resource.PROJECT_Create_Licence</h3>
            <h4>@Resource.PROJECT_Create_LicenceExplain</h4>
            <p>
                <br>

            </p>
            @Html.Raw(Resource.PROJECT_Create_LicenceDescription)
          
        </div>

    </div><!-- /.row -->

</div><!-- /.container -->

@section Scripts
    {
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $(".tm-input").tagsManager({ output: '#Tags' });
        });

    </script>
    


}